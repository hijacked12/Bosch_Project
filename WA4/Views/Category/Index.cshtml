@model IEnumerable<Category>
@{
    ViewData["Title"] = "List";
}
<div class="row pt-4">
    <div class="col-6">
        <h2 style="text-align:left">PN List</h2>
    </div>
    <div class="col-6 text-end" style="padding-bottom:10px">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            Input New PN
        </a>
    </div>
</div>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Material Number </th>
            <th> Component Number </th>
            <th> Component Description </th>
            <th> Quantity </th>
            <th> Change Number </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.MaterialNumber
                </td>
                <td width="30%">
                    @obj.ComponentNumber
                </td>
                <td width="30%">
                    @obj.ComponentDescription
                </td>
                <td width="30%">
                    @obj.Quantity
                </td>
                <td width="30%">
                    @obj.ChangeNumber
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

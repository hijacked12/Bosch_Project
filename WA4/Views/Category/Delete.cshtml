@model Category
@{
    ViewData["Title"] = "Input New PN";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="text-primary"> Edit PN</div>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="MaterialNumber"></label>
            <input asp-for="MaterialNumber" class="form-control" disabled />
            <span asp-validation-for="MaterialNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ComponentNumber"></label>
            <input asp-for="ComponentNumber" class="form-control" disabled />
            <span asp-validation-for="ComponentNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ComponentDescription"></label>
            <input asp-for="ComponentDescription" class="form-control" disabled />
            <span asp-validation-for="ComponentDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" disabled />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ChangeNumber"></label>
            <input asp-for="ChangeNumber" class="form-control" disabled />
            <span asp-validation-for="ChangeNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}